import java.util.*;
public class Main {
    public static void main(String[] args) {
	Scanner z=new Scanner(System.in);
	int[] a=new int[3];
	for(int i=0;i<3;i++)
	    a[i]=z.nextInt();
	int n,d1,d2=a[2];
	n=z.nextInt();
	n=n-3;
	d1=a[1]-a[0];
	while(n>0){
	    d2=d2+d1;
	    n--;
	}
	System.out.print(d2);
	}
}
